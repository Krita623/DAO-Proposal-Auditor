# ===========================================
# 区块链节点配置
# ===========================================
# 主网 RPC（用于 Fork）- 推荐 Alchemy/Infura
MAINNET_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY

# 或者其他链的 RPC（可选）
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/YOUR_API_KEY
OPTIMISM_RPC_URL=
POLYGON_RPC_URL=

# Anvil 本地端口
ANVIL_PORT=8545

# Fork 的区块高度（可选，不填则使用最新块）
FORK_BLOCK_NUMBER=

# ===========================================
# LLM API 配置
# ===========================================
# Claude API Key (必需)
ANTHROPIC_API_KEY=sk-ant-xxxxx

# OpenAI API Key（备选）
OPENAI_API_KEY=

# 第三方平台配置（可选）
# 如果使用第三方 LLM 平台，设置以下 URL
ANTHROPIC_BASE_URL=
OPENAI_BASE_URL=

# LLM 模型选择
LLM_MODEL=claude-sonnet-4-5-20250929

# LLM 温度参数（0-1，越高越有创造性）
LLM_TEMPERATURE=0.1

# LLM 最大输出 Token 数
LLM_MAX_TOKENS=4096

# ===========================================
# 项目配置
# ===========================================
# 调试模式
DEBUG=True

# 日志级别 (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# 输出目录
OUTPUT_DIR=./outputs

# 报告保存目录
REPORT_DIR=./outputs/reports

# Trace 缓存目录
TRACE_CACHE_DIR=./data/traces

# ===========================================
# Foundry/Anvil 配置
# ===========================================
# Foundry 安装路径（如果不在 PATH 中则填写）
FOUNDRY_PATH=

# Anvil 启动超时时间（秒）
ANVIL_TIMEOUT=30

# Anvil 额外参数（可选）
ANVIL_EXTRA_ARGS=

# WSL 配置（Windows 系统使用）
# 如果 Anvil 安装在 WSL 中，设置 WSL 发行版名称（如 Ubuntu, Debian 等）
# 如果为空，将自动检测并使用默认发行版
WSL_DISTRO=Ubuntu

# 是否强制使用 WSL（true/false，留空则自动检测）
# 如果为 true，即使检测到 Linux 环境也会通过 WSL 调用
USE_WSL=

# ===========================================
# 分析配置
# ===========================================
# 是否启用图可视化
ENABLE_GRAPH_VISUALIZATION=True

# 图可视化输出格式 (png, svg, pdf)
GRAPH_OUTPUT_FORMAT=png

# Trace 深度限制（防止无限递归）
MAX_TRACE_DEPTH=50

# 是否缓存 Trace 结果
ENABLE_TRACE_CACHE=True
